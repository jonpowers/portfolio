#landing
  height 300vh
  font-size 1.5vw

  #header
    h1, h2, h3
      font-family 'Poiret One', cursive
      text-align right
      text-decoration none

  h1, h2, h3
    line-height 1
    text-align center

  h1
    font-size 7vw
    line-height 1.3

  h2
    font-size 4vw

  h3
    font-size 3vw

  h4
    font-size 1.5vw
    margin-top 2vh
    margin-bottom 2vh

  #page1
    height 100vh

  #page2, #page3, #page4
    margin-bottom 30vh

    h1
      margin 0 auto
      max-width 80vw
      color rgb(255,255,255)


  #page2 h1
    border-width 3px
    border-style solid
    background-image: -webkit-gradient(linear, 0 0, 100% 0, from(rgb(219, 40, 40)), to(rgb(251, 189, 8)));
    background-image: -webkit-linear-gradient(left, rgb(219, 40, 40), rgb(251, 189, 8));
    background-image: -moz-linear-gradient(left, rgb(219, 40, 40), rgb(251, 189, 8));
    background-image: -o-linear-gradient(left, rgb(219, 40, 40), rgb(251, 189, 8));
    padding-bottom: 3px

  #page3 h1
    border-width 3px
    border-style solid
    background-image: -webkit-gradient(linear, 0 0, 100% 0, from(#000), to(rgb(0, 181, 173)));
    background-image: -webkit-linear-gradient(left, rgb(181, 204, 24), rgb(0, 181, 173));
    background-image: -moz-linear-gradient(left, rgb(181, 204, 24), rgb(0, 181, 173));
    background-image: -o-linear-gradient(left, rgb(181, 204, 24), rgb(0, 181, 173));
    padding-bottom: 3px

  #page4 h1
    border-width 3px
    border-style solid
    background-image: -webkit-gradient(linear, 0 0, 100% 0, from(rgb(33, 133, 208)), to(rgb(163, 51, 200)));
    background-image: -webkit-linear-gradient(left, rgb(33, 133, 208), rgb(163, 51, 200));
    background-image: -moz-linear-gradient(left, rgb(33, 133, 208), rgb(163, 51, 200));
    background-image: -o-linear-gradient(left, rgb(33, 133, 208), rgb(163, 51, 200));
    padding-bottom: 3px

  .header
    margin-bottom 5vh


//Portrait Mobile
@media (max-width: 500px)
  #landing
    #header
      h1
        font-size 10vw

      h2
        font-size 7.5vw

      h3
        font-size 5vw

    .row
      margin 0 auto
      max-width 70vw

    #page2, #page3, #page4
      margin-bottom 15vh


//Landscape Mobile
@media (max-height: 500px)
  #landing
    #header
      h1
        font-size 10vw

      h2
        font-size 7.5vw

      h3
        font-size 5vw

    .row
      margin 0 auto
      max-width 70vw
